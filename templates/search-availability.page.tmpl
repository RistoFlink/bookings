{{template "base" .}}

{{define "content"}}

	  <div class="container">
		  <div class="row">
			  <div class="col-md-3"></div>
			  <div class="col-md-6">
				<h1 class="mt-5 mb-3">Search for availability</h1>
				<form action="" method="get" novalidate class="needs-validation">

					<div id="reservation-dates">
				<div class="row g-2">
						
					<div class="col-md-6">
					  <div class="mb-2">
						<input required type="text" class="form-control" id="start_date" name="start_date" aria-describedby="StartDateHelp" placeholder="Arrival date">
					  </div>
					</div>
					<div class="col-md-6">
						<div class="mb-2">
						  <input required type="text" class="form-control" id="end_date" name="end_date" aria-describedby="endDateHelp" placeholder="Departure date">
						</div>
					</div>
					</div>
					<hr>
				</div>


			  <button type="submit" class="btn btn-primary">Search availability</button>
			 </form>
			  </div>
			</div>
		  </div>
	  </div>
{{end}}

{{define "js"}}
	<script>
		const elem = document.getElementById('reservation-dates');
		const rangepicker = new DateRangePicker(elem, {
		  // ...options
			format: "yyyy-mm-dd",
		}); 
	</script>
{{end}}
